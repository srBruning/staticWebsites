---
const phoneNumber = '5554984151823';
const address = 'Doraci de Andrade, Garopaba 88495000';
const wazeUrl = `https://waze.com/ul?q=${encodeURIComponent(address)}`;
const mapsUrl = `https://www.google.com/maps/search/?api=1&query=${encodeURIComponent(address)}`;
const mapsEmbedUrl = `https://www.google.com/maps?q=${encodeURIComponent(address)}&output=embed`;
---
<section id="contato" class="py-20 bg-zinc-950">
  <div class="max-w-7xl mx-auto px-4">
    <div class="text-center mb-16">
      <h2 class="text-4xl md:text-5xl font-bold text-white mb-4">Entre em Contato</h2>
      <div class="h-1 w-24 bg-red-600 mx-auto mb-6"></div>
      <p class="text-xl text-gray-400">Estamos prontos para atender você</p>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8 mb-12">
      <div class="bg-zinc-900 border border-zinc-800 rounded-lg p-8 text-center hover:border-red-600 transition-all duration-300">
        <div class="w-16 h-16 bg-red-600/10 rounded-full flex items-center justify-center mx-auto mb-4">
          <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-phone w-8 h-8 text-red-600"><path d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72 12.84 12.84 0 0 0 .7 2.81 2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45 12.84 12.84 0 0 0 2.81.7A2 2 0 0 1 22 16.92z"></path></svg>
        </div>
        <h3 class="text-xl font-bold text-white mb-3">Telefone</h3>
        <a href="tel:+5554984151823" class="text-gray-400 hover:text-red-500 transition-colors">(54) 98415-1823</a>
        <div class="mt-4">
          <a href={`https://wa.me/${phoneNumber}`} target="_blank" rel="noopener noreferrer" class="inline-block bg-green-600 hover:bg-green-700 text-white px-6 py-2 rounded-lg transition-colors">WhatsApp</a>
        </div>
      </div>

      <div class="bg-zinc-900 border border-zinc-800 rounded-lg p-8 text-center hover:border-red-600 transition-all duration-300">
        <div class="w-16 h-16 bg-red-600/10 rounded-full flex items-center justify-center mx-auto mb-4">
          <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-map-pin w-8 h-8 text-red-600"><path d="M20 10c0 4.993-5.539 10.193-7.399 11.799a1 1 0 0 1-1.202 0C9.539 20.193 4 14.993 4 10a8 8 0 0 1 16 0"></path><circle cx="12" cy="10" r="3"></circle></svg>
        </div>
        <h3 class="text-xl font-bold text-white mb-3">Endereço</h3>
        <p class="text-gray-400 mb-4">Doraci de Andrade<br/>Garopaba - SC<br/>CEP: 88495-000</p>
      </div>

      <div class="bg-zinc-900 border border-zinc-800 rounded-lg p-8 text-center hover:border-red-600 transition-all duration-300">
        <div class="w-16 h-16 bg-red-600/10 rounded-full flex items-center justify-center mx-auto mb-4">
          <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" 
          stroke-width="2" stroke-linecap="round" stroke-linejoin="round" 
          class="lucide lucide-navigation w-8 h-8 text-red-600"><polygon points="3 11 22 2 13 21 11 13 3 11"></polygon></svg>
        </div>
        <h3 class="text-xl font-bold text-white mb-3">Como Chegar</h3>
        <div class="flex flex-col gap-2">
          <a href={mapsUrl} target="_blank" rel="noopener noreferrer" class="bg-red-600 hover:bg-red-700 text-white px-6 py-2 rounded-lg transition-colors">Google Maps</a>
          <a href={wazeUrl} target="_blank" rel="noopener noreferrer" class="bg-blue-600 hover:bg-blue-700 text-white px-6 py-2 rounded-lg transition-colors">Waze</a>
        </div>
      </div>


      <div class="bg-zinc-900 border border-zinc-800 rounded-lg p-8 text-center hover:border-red-600 transition-all duration-300">
        <div class="w-16 h-16 bg-red-600/10 rounded-full flex items-center justify-center mx-auto mb-4">
          <svg class="w-6 h-6 text-gray-800 dark:text-red-600" aria-hidden="true" 
            xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="currentColor" viewBox="0 0 24 24">
            <path fill-rule="evenodd" d="M12.037 21.998a10.313 10.313 0 0 1-7.168-3.049 9.888 9.888 0 0 1-2.868-7.118 9.947 9.947 0 0 1 3.064-6.949A10.37 10.37 0 0 1 12.212 2h.176a9.935 9.935 0 0 1 6.614 2.564L16.457 6.88a6.187 6.187 0 0 0-4.131-1.566 6.9 6.9 0 0 0-4.794 1.913 6.618 6.618 0 0 0-2.045 4.657 6.608 6.608 0 0 0 1.882 4.723 6.891 6.891 0 0 0 4.725 2.07h.143c1.41.072 2.8-.354 3.917-1.2a5.77 5.77 0 0 0 2.172-3.41l.043-.117H12.22v-3.41h9.678c.075.617.109 1.238.1 1.859-.099 5.741-4.017 9.6-9.746 9.6l-.215-.002Z" clip-rule="evenodd"/>
            </svg>

        </div>
        <h3 class="text-xl font-bold text-white mb-3">Nos ache no google</h3>
        <div class="flex flex-col gap-2">
         <a href="https://share.google/APH69W3tUI9DJ3FKv" target="_blank"
            class="inline-flex items-center gap-2 bg-red-600 hover:bg-red-700 text-white px-8 py-4 rounded-lg text-lg font-semibold transition-all duration-300 transform hover:scale-105">
                <svg class="w-6 h-6 text-gray-800 dark:text-white" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="currentColor" viewBox="0 0 24 24">
                <path fill-rule="evenodd" d="M12.037 21.998a10.313 10.313 0 0 1-7.168-3.049 9.888 9.888 0 0 1-2.868-7.118 9.947 9.947 0 0 1 3.064-6.949A10.37 10.37 0 0 1 12.212 2h.176a9.935 9.935 0 0 1 6.614 2.564L16.457 6.88a6.187 6.187 0 0 0-4.131-1.566 6.9 6.9 0 0 0-4.794 1.913 6.618 6.618 0 0 0-2.045 4.657 6.608 6.608 0 0 0 1.882 4.723 6.891 6.891 0 0 0 4.725 2.07h.143c1.41.072 2.8-.354 3.917-1.2a5.77 5.77 0 0 0 2.172-3.41l.043-.117H12.22v-3.41h9.678c.075.617.109 1.238.1 1.859-.099 5.741-4.017 9.6-9.746 9.6l-.215-.002Z" clip-rule="evenodd"/>
                </svg>
                Google
            </a>
        </div>
      </div>
    </div>

    <div class="bg-zinc-900 border border-zinc-800 rounded-lg overflow-hidden h-[400px]">
      <iframe src={mapsEmbedUrl} width="100%" height="100%" style="border:0;" allowfullscreen loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>
    </div>
  </div>
</section>
