---
import '../styles/globals.css';

interface Props {
  title?: string;
  description?: string;
  image?: string;
}

const { title, description, image } = Astro.props;
const defaultImage = 'https://autogaropaba.com/og-image.jpg';
const ogImage = image || defaultImage;
---

<!doctype html>
<html lang="pt-BR">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title || 'Autogaropaba - Funilaria e Estética Automotiva em Garopaba'}</title>
    <meta name="description" content={description || 'Serviços de funilaria, pintura profissional, proteção de pintura, restauração veicular e higienização em Garopaba. Qualidade e experiência no cuidado do seu veículo.'} />
    <meta name="keywords" content="funilaria Garopaba, pintura automotiva, estética automotiva, proteção pintura, restauração veicular, higienização carro, serviços automotivos" />
    <meta name="author" content="Autogaropaba" />
    <meta name="robots" content="index, follow" />
    <link rel="canonical" href="https://autogaropaba.com/" />
    
    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content="https://autogaropaba.com/" />
    <meta property="og:title" content={title || 'Autogaropaba - Funilaria e Estética Automotiva'} />
    <meta property="og:description" content={description || 'Serviços completos de funilaria, pintura e estética automotiva em Garopaba'} />
    <meta property="og:image" content={ogImage} />
    
    <!-- Twitter -->
    <meta property="twitter:card" content="summary_large_image" />
    <meta property="twitter:url" content="https://autogaropaba.com/" />
    <meta property="twitter:title" content={title || 'Autogaropaba - Funilaria e Estética Automotiva'} />
    <meta property="twitter:description" content={description || 'Serviços completos de funilaria, pintura e estética automotiva em Garopaba'} />
    <meta property="twitter:image" content={ogImage} />
    
    <!-- Additional SEO -->
    <meta name="theme-color" content="#1f1f1f" />
    <meta name="apple-mobile-web-app-capable" content="yes" />
    <meta name="apple-mobile-web-app-status-bar-style" content="black-translucent" />
  </head>
  <body>
    <slot />
  </body>
</html>
